<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_jetpack"
    app:startDestination="@id/jetpackTopFragment">

    <fragment
        android:id="@+id/jetpackTopFragment"
        android:name="com.mokelab.demo.libs.jetpack.JetpackTopFragment"
        android:label="JetpackTopFragment" >
        <action
            android:id="@+id/action_jetpack_top_to_ui"
            app:destination="@id/nav_jetpack_ui"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_jetpack_top_to_arch"
            app:destination="@id/nav_jetpack_arch"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <include app:graph="@navigation/nav_jetpack_ui" />
    <include app:graph="@navigation/nav_jetpack_arch" />
</navigation>